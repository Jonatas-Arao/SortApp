<?xml version='1.0' encoding='utf-8'?>
<widget id="jonatas.app.SortApp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SortApp</name>
    <description>
        Um App de Sorteio Genérico
    </description>
    <author email="jonatas.arao.de.carvalho.neves@hotmail.com" href="https://github.com/Jonatas-Arao">
        Jonatas Arão de Carvalho Neves
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
